extends layout

block content
  a(href="/dashboard" class="waves-effect waves-light btn") Dashboard
    i(class="material-icons right") dashboard

  h1= title
  
  form(method='POST' action='' class="container")
    div.form-group
      label(for="description") Event Description
      input(type="text" name='description' id='description' placeholder='description' required='true')
      label(for="address") Address
      input(type="text" name='address' id='address' placeholder='address' required='true')
      label(for="meeting_date") Date of Meeting
      input(type="date" name='meeting_date' id='meeting_date' placeholder='meeting date' required='true')
      label(for="meeting_start_time") Start Time
      input(type="time" name='start' id='meeting_start_time' placeholder='start time' required='true')
      label(for="meeting_end_time") Ending Time
      input(type="time" name='end' id='meeting_end_time' placeholder='end time' required='true')
    button(class='btn waves-effect waves-light submit' type='submit') Submit
      i(class="material-icons right") send

    if errors
      ul
        for error in errors
          li!= error.msg

